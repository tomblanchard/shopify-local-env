      left: box-scale($num);
    }
    .#{$breakpoint}position-left-center--up-#{$num} {
      left: box-scale($num);
      @extend %position-center-vertical;
    }
    .#{$breakpoint}position-right-center--up-#{$num} {
      right: box-scale($num);
      @extend %position-center-vertical;
    }
  }

  .position-background {
