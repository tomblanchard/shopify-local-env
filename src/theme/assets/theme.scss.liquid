    bottom: 0;
    left: 0;
  }

  @for $num from 1 through 12 {
    .#{$breakpoint}position-top-left--up-#{$num} {
      top: box-scale($num);
      left: box-scale($num);
    }
    .#{$breakpoint}position-top-right--up-#{$num} {
      top: box-scale($num);
      right: box-scale($num);
    }
    .#{$breakpoint}position-bottom-right--up-#{$num} {
