        #{$property}: box-scale(-$num);
      }
      .#{$breakpoint}position-#{$property}-negative--up-#{$num} {
        #{$property}: -(box-scale($num));
      }
      .#{$breakpoint}position-#{$property}-negative--down-#{$num} {
        #{$property}: -(box-scale(-$num));
      }
